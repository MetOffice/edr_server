{% whitespace oneline %}
"locations": {
  "link": {
    "href": "{{ reverse_url_full('locations_query', collection.id) }}",
    "hreflang": "en",
    "rel": "data",
    "type": "application/geo+json",
    "title": "{{ collection.name }}",
    "templated": true,
    "variables": {
      "title": "Location query",
      "description": "Location query",
      "query_type": "locations",
      "output_formats": [
        "CoverageJSON",
        "GeoJSON"
      ],
      "default_output_format": "CoverageJSON",
      "crs_details": [
        {
          "crs": "{{ collection.crs_name }}",
          "wkt": "{{ collection.crs }}"
        }
      ]
    }
  }
},