{% whitespace oneline %}
"trajectory": {
  "link": {
    "href": "http://data.example.com/collections/monitoringsites/locations/1234",
    "hreflang": "en",
    "rel": "data",
    "type": "application/geo+json",
    "title": "{{ collection.name }}",
    "templated": true,
    "variables": {
      "title": "Trajectory query",
      "description": "Query to return data for a defined well known text trajectory",
      "query_type": "trajectory",
      "coords": {
        "description": "string",
        "type": "string"
      },
      "width_units": [
        "km",
        "miles"
      ],
      "height_units": [
        "m",
        "hPa"
      ],
      "output_formats": [
        "CoverageJSON",
        "GeoJSON"
      ],
      "default_output_format": "CoverageJSON",
      "crs_details": [
        {
          "crs": "{{ collection.crs_name }}",
          "wkt": "{{ collection.crs }}"
        }
      ]
    }
  }
},