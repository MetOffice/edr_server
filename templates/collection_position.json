{% whitespace oneline %}
"position": {
  "link": {
    "href": "{{ reverse_url_full('position_query', collection.id) }}?coords={coords}",
    "hreflang": "en",
    "rel": "alternate",
    "type": "application/geo+json",
    "title": "{{ collection.name }}",
    "templated": true,
    "variables": {
      "title": "Position query",
      "description": "Query to return data for a defined well known text point",
      "query_type": "position",
      "coords": {
        "description": "Well Known Text POINT value i.e. POINT(-120, 55)",
        "type": "Point"
      },
      "output_formats": [
        "CoverageJSON",
        "GeoJSON"
      ],
      "default_output_format": "CoverageJSON",
      "crs_details": [
        {
          "crs": "{{ collection.crs_name }}",
          "wkt": "{{ collection.crs }}"
        }
      ]
    }
  }
},