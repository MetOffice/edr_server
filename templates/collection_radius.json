{% whitespace oneline %}
"radius": {
  "link": {
    "href": "http://www.example.org/edr/collections/{collection_name}/radius?coords={coords}",
    "hreflang": "en",
    "rel": "data",
    "type": "application/geo+json",
    "title": "{{ collection.name }}",
    "templated": true,
    "variables": {
      "title": "Radius query",
      "description": "Query to return data within a radius around a defined well known text point",
      "query_type": "radius",
      "coords": {
        "description": "Well Known Text POINT value i.e. POINT(-120, 55)",
        "type": "string"
      },
      "within_units": [
        "km",
        "miles"
      ],
      "output_formats": [
        "CoverageJSON",
        "GeoJSON"
      ],
      "default_output_format": "CoverageJSON",
      "crs_details": [
        {
          "crs": "native",
          "wkt": "GEOGCS[\"WGS 84\",DATUM[\"WGS_1984\",SPHEROID[\"WGS 84\",6378137,298.257223563,AUTHORITY[\"EPSG\",\"7030\"]],AUTHORITY[\"EPSG\",\"6326\"]],PRIMEM[\"Greenwich\",0,AUTHORITY[\"EPSG\",\"8901\"]],UNIT[\"degree\",0.01745329251994328,AUTHORITY[\"EPSG\",\"9122\"]],AUTHORITY[\"EPSG\",\"4326\"]]"
        }
      ]
    }
  }
},