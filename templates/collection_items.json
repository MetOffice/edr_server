{% whitespace oneline %}
"items": {
  "link": {
    "href": "{{ reverse_url_full('items_query', collection.id) }}",
    "hreflang": "en",
    "rel": "data",
    "type": "application/geo+json",
    "title": "{{ collection.name }}",
    "templated": true,
    "variables": {
      "title": "Items query",
      "description": "Query to return data for specific item",
      "query_type": "items",
      "output_formats": [
        "CoverageJSON",
        "GeoJSON"
      ],
      "default_output_format": "CoverageJSON",
      "crs_details": [
        {
          "crs": "{{ collection.crs_name }}",
          "wkt": "{{ collection.crs }}"
        }
      ]
    }
  }
}